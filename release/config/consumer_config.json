{
  "bootstrapServers": "YOUR_KAFKA_BOOTSTRAP_SERVER",

  "telegramBotToken": "YOUR_TELEGRAM_BOT_TOKEN",
  "telegramChatId": "YOUR_TELEGRAM_CHAT_ID",

  "topics": [
    {
      "topic": "app1-topic",
      "type": "LOG",
      "output": "/path/to/logs/received_app1.log"
    },
    {
      "topic": "app2-topic",
      "type": "LOG",
      "output": "/path/to/logs/received_app2.log"
    },
    {
      "topic": "app3-topic",
      "type": "LOG",
      "output": "/path/to/logs/received_app3.log"
    },
    {
      "topic": "app4-topic",
      "type": "LOG",
      "output": "/path/to/logs/received_app4.log"
    },
    {
      "topic": "server-topic",
      "type": "LOG",
      "output": "/path/to/logs/received_server.log"
    },
    {
      "topic": "system-topic",
      "type": "LOG",
      "output": "/path/to/logs/received_system.log"
    },
    {
      "topic": "system-resources-daily",
      "type": "METRIC",
      "output": "/path/to/logs/received_system_resources_daily.json"
    }
  ],

  "alertKeywords": [
    "error",
    "fail",
    "failure",
    "fatal",
    "exception",
    "timeout",
    "server error",
    "critical",
    "warn",
    "warning",
    "panic",
    "crash",
    "500",
    "404",
    "503"
  ],

  "database": {
    "url": "jdbc:mysql://YOUR_DB_HOST:3306/YOUR_DATABASE_NAME",
    "user": "YOUR_DATABASE_USER",
    "password": "YOUR_DATABASE_PASSWORD",

    "tables": {
      "alertLogTable": "alert_logs",
      "systemStorageSnapshotTable": "system_storage_snapshot",
      "pathStorageTable": "path_storage"
    }
  }

}
